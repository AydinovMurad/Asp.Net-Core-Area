@model Category

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        @*<div class="form-text">We'll never share your email with anyone else.</div>*@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <img src="~/client/assets/categoryIcons/@Model.Icon" width="100" />
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">File</label>
        <input asp-for="File" class="form-control" id="catFile">
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-warning">Update</button>
</form>

@section Scripts{
    <script>
        var file = document.getElementById("catFile")
        setTimeout(file.files[0], 10000)
    </script>
}